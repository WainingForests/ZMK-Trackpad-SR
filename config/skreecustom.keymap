//#include <behaviors/mouse_keys.dtsi>

#define ZMK_POINTING_DEFAULT_SCRL_VAL 140

#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    behaviors {
        mouse_scroll: sensor_scroll {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&msc>, <&msc>;

            tap-ms = <5>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESC    &kp N1  &kp N2  &kp N3     &kp N4       &kp N5        &kp N6      &kp N7    &kp N8     &kp N9   &kp N0    &kp EQUAL
&kp TAB    &kp Q   &kp W   &kp E      &kp R        &kp T         &kp Y       &kp U     &kp I      &kp O    &kp P     &kp MINUS
&kp LSHFT  &kp A   &kp S   &kp D      &kp F        &kp G         &kp H       &kp J     &kp K      &kp L    &kp SEMI  &kp SQT
&kp GRAVE  &kp Z   &kp X   &kp C      &kp V        &kp B         &kp N       &kp M     &kp COMMA  &kp DOT  &kp FSLH  &kp BSLH
&kp F1     &kp F2  &kp F3  &kp F4     &kp F5                                 &kp F6    &kp F7     &kp F8   &kp F9    &kp F10
                                      &kp C_PAUSE  &kp C_NEXT    &kp C_MUTE
                           &kp LSHFT  &kp SPACE    &kp BSPC      &kp DEL     &kp RET   &kp RGUI
                           &kp LCTRL  &kp LALT     &mo 1         &mo 2       &kp RALT  &kp RCTRL
            >;

            sensor-bindings =
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>,
                <&inc_dec_kp UP_ARROW DOWN_ARROW>,
                <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        layer_1 {
            bindings = <
&bt BT_CLR  &bt BT_NXT  &trans  &trans  &trans  &trans         &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans      &trans  &trans  &trans  &trans         &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans      &trans  &trans  &trans  &trans         &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans      &trans  &trans  &trans  &trans         &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans      &trans  &trans  &trans                         &trans  &trans  &trans  &trans  &trans
                                        &trans  &bootloader    &trans
                                &trans  &trans  &trans         &trans  &trans  &trans
                                &trans  &trans  &trans         &trans  &trans  &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>,
                <&inc_dec_kp UP_ARROW DOWN_ARROW>,
                <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        layer_2 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans       &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans       &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans       &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans       &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans                         &trans  &trans  &trans  &trans  &trans
                                &trans  &trans    &bootloader
                        &trans  &trans  &trans    &trans       &trans  &trans
                        &trans  &trans  &trans    &trans       &trans  &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>,
                <&inc_dec_kp UP_ARROW DOWN_ARROW>,
                <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        layer_3 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans                    &trans  &trans  &trans  &trans  &trans
                                &trans  &trans    &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>,
                <&inc_dec_kp UP_ARROW DOWN_ARROW>,
                <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
